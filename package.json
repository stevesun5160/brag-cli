{
  "name": "brag-doc-cli",
  "version": "1.0.0",
  "description": "A CLI tool to help you track daily work and generate performance review materials with AI",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "brag-add": "./bin/brag-add.js",
    "brag-polish": "./bin/brag-polish.js",
    "brag-sum": "./bin/brag-sum.js"
  },
  "scripts": {
    "build": "tsc",
    "dev:add": "tsx src/cli/add.ts",
    "dev:polish": "tsx src/cli/polish.ts",
    "dev:sum": "tsx src/cli/sum.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "cli",
    "journal",
    "brag",
    "performance-review",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "dependencies": {
    "@google/genai": "^1.34.0",
    "dotenv": "^17.2.3",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
